
<div class="noSearch">
  <% if(noMatch!== undefined){ %>
    <h3><%=noMatch%></h3>
  <% } %>
</div>

<% products.forEach( p =>{ %>
 <section id="main">

  <div class="row">
    <div class="mainscreen col-lg-5">
      <div class="card">
        <div class="card-body painting">
        <a class="lightbox boom" href="#<%- p._id %>">
        <img class="image" src="data:image/<%=p.img.contentType%>;base64,<%=p.img.data.toString('base64')%>"/></a>

        <div class="lightbox-target" id="<%- p._id %>">
        <img class="image" src="data:image/<%=p.img.contentType%>;base64,<%=p.img.data.toString('base64')%>"/></a>
        <a class="lightbox-close" href="#"></a>
        </div>
        </div>
      </div>
    </div>

    <div class="mainscreen col-lg-4">
      <div class="card hide bg-dark">
        <div class="card-header bg-dark">
          <h3>Description</h3>
        </div>
        <div class="card-body bg-dark">
          <div class="card-text"><%-p.desc %></div>
          </div>
          <b>Price</b> Rs.<%-p.price %>
    </div>
    <a href="/dashboard/add-to-cart/<%- p._id %>" class= "btn btn-secondary" style="
      width: 100%;
      margin-top: 20px;
      margin-bottom: 10px;
  "> <i class="fas fa-shopping-cart"></i> Add to Cart</a>
    </div>

    <div class="mainscreen hide col-lg-3">
      <div class="card bg-dark">
        <div class="card-header bg-dark">
          <h3>About Artist</h3>
        </div>
        <div class="card-body bg-dark"><%-p.artist_name %>
          <%-p.artist_email %>
          <%-p.artist_phone %>
          <%-p.artist_description %>
        </div>
      </div>
    </div>
  </div>
</section>

<% }) %>
